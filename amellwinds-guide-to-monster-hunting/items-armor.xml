	<element name="Armor Class: +1" type="Item" source="Amellwind's Guide to Monster Hunting" id="ID_ALD_AGMH_ITEM_ARMOR_CLASS_1">
		<description>
			<p><i>You can equip this item to “enable” it. It remains hidden from the inventory on your character sheet.</i></p>
			<p>You armor class increases by 1.</p>
		</description>
		<setters>
			<set name="category">Additional Bonuses</set>
			<set name="slot">misc</set>
			<set name="inventory-hidden">true</set>
		</setters>
		<sheet display="false" />
		<rules>
			<stat name="ac" value="1" />
		</rules>
	</element>

