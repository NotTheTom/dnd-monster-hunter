        <description>
            <p>You suffer no harm in temperature as cold as -20 degrees Fahrenheit while you wear this armor.</p>
        </description>
        <setters>
            <set name="category">Monster Materials</set>
            <set name="cost" currency="gp">0</set>
            <set name="weight" lb="0">0 lb.</set>
